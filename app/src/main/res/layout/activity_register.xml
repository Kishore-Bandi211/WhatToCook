<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="abhinay.firstapp.project.RegisterActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logo_new_withoutbg"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:id="@+id/register_logo"
        android:layout_alignParentTop="true"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username_reg"
        android:layout_below="@+id/register_logo"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dp"
        android:textColor="@color/white"
        android:layout_marginRight="25dp"
        android:hint="Username"
        android:inputType="text"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/user_drawable"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext_bg"
        android:padding="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phonenumber_reg"
        android:layout_below="@+id/username_reg"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:hint="Phone"
        android:inputType="phone"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/edit_drawable"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext_bg"
        android:padding="5dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password_reg"
        android:inputType="textPassword"
        android:layout_below="@+id/phonenumber_reg"
        android:layout_centerInParent="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:hint="Password"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/edit_drawable_password"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext_bg"
        android:padding="5dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_centerInParent="true"
        android:text="Register"
        android:id="@+id/register_button"
        android:background="@drawable/button_bg"
        android:layout_below="@+id/password_reg"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        />

</RelativeLayout>